pipeline {
    agent any

    stages {
        stage("checkout") {
            steps {
                echo 'Checking out the stage'
            }
        }

        stage("build") {
            steps {
                dir('jenkins-pipeline') {
                    // Change the working directory to 'jenkins-pipeline' before running Docker build
                    sh "docker build -t thakur156/jenkins-pipeline:${BUILD_NUMBER} ."
                }
            }
        }

        stage("push") {
            steps {
                script {
                    // Define the DOCKER_IMAGE environment variable with dynamic value
                    def DOCKER_IMAGE = "thakur156/jenkins-pipeline:${BUILD_NUMBER}"

                    // Set the environment variable for the Docker push step
                    env.DOCKER_IMAGE = DOCKER_IMAGE

                    // Push the Docker image
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }
    }
}



