pipeline {
    agent any

    environment {
        REGISTRY_CREDENTIALS = credentials('docker-cred')
        DOCKER_IMAGE = "thakur156/jenkins-pipeline:${BUILD_NUMBER}"
    }

    stages {
        stage("checkout") {
            steps {
                echo 'Checking out the stage'
                checkout scm
            }
        }

        stage("build") {
            steps {
                dir('jenkins-pipeline') {
                    // Change the working directory to 'jenkins-pipeline' before running Docker build
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage("push") {
            steps {
                script {
                    // Use 'docker.withRegistry' to securely log in to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', REGISTRY_CREDENTIALS) {
                        // Push the Docker image to Docker Hub
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }
    }
}

