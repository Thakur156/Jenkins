pipeline {
    agent any

    environment {
        REGISTRY_CREDENTIALS = credentials('docker-cred')
        DOCKER_IMAGE = "thakur156/jenkins-pipeline:${BUILD_NUMBER}"
        DOCKER_PASSWORD = '123456ABC123'
    }

    stages {
        stage("checkout") {
            steps {
                echo 'Checking out the stage'
                checkout scm
            }
        }

        stage("build") {
            steps {
                dir('jenkins-pipeline') {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage("push") {
            steps {
                script {
                    // Log in to Docker Hub with secure password handling
                    sh "echo '${DOCKER_PASSWORD}' | docker login -u thakur156 --password-stdin"
                    }
                }
            }
        }
    }
}

