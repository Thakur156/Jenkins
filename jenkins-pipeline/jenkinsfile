pipeline {
    agent any

    stages {
        stage("checkout") {
            steps {
                echo 'Checking out the stage'
                checkout scm
            }
        }

        stage("build") {
            steps {
                dir('jenkins-pipeline') {
                    // Change the working directory to 'jenkins-pipeline' before running Docker build
                    sh "docker build -t thakur156/jenkins-pipeline:${BUILD_NUMBER} ."
                }
            }
        }

        stage("push") {
            steps {
                script {
                    // Define the DOCKER_IMAGE environment variable with dynamic value
                    def DOCKER_IMAGE = "thakur156/jenkins-pipeline:${BUILD_NUMBER}"

                    // Set the environment variable for the Docker push step
                    env.DOCKER_IMAGE = DOCKER_IMAGE

                    // Retrieve Docker Hub credentials from Jenkins credentials
                    def dockerHubCredentials = credentials('docker-cred') // Replace with your actual credentials ID

                    // Log in to Docker Hub securely using credentials with --password-stdin
                    sh """
                        echo \${DOCKER_PASSWORD} | docker login -u \${DOCKER_USERNAME} --password-stdin
                        docker push \${DOCKER_IMAGE}
                    """
                }
            }
        }
    }
}